---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<li class="link-card flex-col max-w-80 items-center text-center">
	<h2>{title}</h2>
	<p class="desplegable">{body}</p>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column; /* Asegúrate de que el texto esté en columnas */
		padding: 1px;
		background-color: #23262d;
		border-radius: 7px;
		overflow: hidden; /* Esconde el contenido desbordante */
		cursor: pointer; /* Cambia el cursor para indicar que es interactivo */
		transition: height .3s;
		interpolate-size: allow-keywords;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		height: 0; /* Comienza con altura 0 */
		overflow: hidden; /* Esconde el contenido desbordante */
		transition: height 0.3s ease; /* Transición suave */
	}

	.link-card:hover p {
		height: auto; /* Deja que el párrafo tome su altura natural */
	}
</style>
