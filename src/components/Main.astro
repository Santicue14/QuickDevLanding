---
import "animate.css";
---

<div class="h-[80vh] flex">
  <div
    class="info mt-28 w-[50rem] grid g ml-28 gap-y-16"
  >
    <h1 class="text-8xl font-bold uppercase text-end">
      Tu solución al <span class="parpadea font-bold text-blue-950"
        >instante</span
      >
    </h1>
    <a
      href="mailto:administracion@quickdevsolution.com"
      target="_blank"
      class="flex items-center justify-center py-3 px-2 bg-cyan-800 text-center w-64 hover:bg-cyan-900 transition-colors"
    >
      <p>Contáctanos</p>
    </a>
  </div>
  <div class="photo">Foto acá</div>
</div>


<style>
  @keyframes parpadeo {
    from{
      opacity: 0;
    }
    to{
      opacity: 1;
    }
  }
  .parpadea{
    animation: parpadeo 1.2s ease infinite;
  }

</style>