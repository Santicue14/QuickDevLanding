---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <meta
      name="description"
      content="Empresa de desarrollo de software, experiencia comprobable, servicios disponibles a cualquier parte del mundo."
    />
    <title>{title}</title>
  </head>
  <body
  class="bg-gradient-to-bl from-blue-950 to-slate-300 relative top-0 text-white"
  >
    <slot />
    <!-- <div class="sticky flex border border-red-500 bottom-4">
			Whatsapp
      </div> -->
  </body>
</html>
